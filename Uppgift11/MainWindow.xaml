        <Button x:Name="btnStart" Content="Starta" HorizontalAlignment="Left" Margin="406,0,0,0" VerticalAlignment="Center" Height="38" Width="116" FontSize="20" Click="btnStart_Click"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Margin="277,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="123" Height="37"/>
        <Label Content="Utfall" HorizontalAlignment="Left" Margin="133,272,0,0" VerticalAlignment="Top" Height="41" Width="96" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="lblRätt" Content="" HorizontalAlignment="Left" Margin="133,318,0,0" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="lblFel" Content="" HorizontalAlignment="Left" Margin="133,361,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="Antal försök" HorizontalAlignment="Left" Margin="277,168,0,0" VerticalAlignment="Top" Width="112"/>
        <Label x:Name="lblValue" Content="50%" HorizontalAlignment="Left" Margin="485,53,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
